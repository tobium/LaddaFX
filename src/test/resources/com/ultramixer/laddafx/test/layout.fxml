<?import com.ultramixer.laddafx.*?>
<?import javafx.scene.control.*?>
<?import org.tbee.javafx.scene.layout.fxml.*?>
<MigPane layout="" cols="[center,fill,grow]" rows="30![]40![][]"
         prefWidth="640" prefHeight="480" stylesheets="@style.css"
         xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
         fx:id="root" fx:controller="com.ultramixer.laddafx.LaddaFXDemoController">
    <Label text="LaddaFX Demo" MigPane.cc="w pref!, spanx 2" styleClass="logo"></Label>

    <Label text="expand-left" MigPane.cc="newline,grow 0" styleClass="button-description"></Label>
    <Label text="expand-right" MigPane.cc="grow 0" styleClass="button-description"></Label>
    <Label text="expand-up" MigPane.cc="grow 0" styleClass="button-description"></Label>
    <Label text="expand-down" MigPane.cc="grow 0" styleClass="button-description"></Label>

    <LaddaButton fx:id="expandLeftButton" text="Submit" MigPane.cc="newline,grow 0, h pref!, w pref!"
                 laddaButtonStyle="EXPAND_LEFT"></LaddaButton>
    <LaddaButton fx:id="expandRightButton" text="Submit" MigPane.cc="grow 0, h pref!, w pref!"
                 laddaButtonStyle="EXPAND_RIGHT"></LaddaButton>
    <LaddaButton fx:id="expandUpButton" text="Submit" MigPane.cc="grow 0, h pref!, w pref!"
                 laddaButtonStyle="EXPAND_UP"></LaddaButton>
    <LaddaButton fx:id="expandDownButton" text="Submit" MigPane.cc="grow 0, h pref!, w pref!"
                 laddaButtonStyle="EXPAND_DOWN"></LaddaButton>

    <Label text="contract" MigPane.cc="newline,grow 0, gaptop 20" styleClass="button-description"></Label>

    <LaddaButton text="Submit" MigPane.cc="newline,grow 0, h pref!, w pref!"
                 laddaButtonStyle="CONTRACT"></LaddaButton>

</MigPane>